//==============Arduino Stuff====================\\

float xNull;  //To be observed through testing
float yNull;  //To be observed through testing
float zNull;  //To be observed through testing 

float xInit;  //Based on differences when mounting servo
float yInit;  //Based on differences when mounting servo
float zInit;  //Based on differences when mounting servo

void getGyroVals(){
  if(Serial.available() > 0){
    Serial.write("Requesting X");
      while(!Serial.available()){ }
      xRaw = Serial.read();}
    
  if(Serial.available() > 0){  
    Serial.write("Requesting Y");
      while(!Serial.available()){ }
      yRaw = Serial.read();}
      
  if(Serial.available() > 0){    
    Serial.write("Requesting Z");
      while(!Serial.available()){ }
      zRaw = Serial.read();}
}

void convertVals(){
  getGyroVals();
  
  xConvert = (xRaw - xNull);
  yConvert = (yRaw - yNull);
  zConvert = (zRaw - zNull);
  
  xConvert += xInit;
  yConvert += yInit;
  zConvert += zInit;
}

void stabilize(){
  convertVals();
  yServo.write(yConvert);
}

